<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context=".SpareParts">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageSparePart"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/repair"/>
            <TextView
                android:id="@+id/txtSparePart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageSparePart"
                android:gravity="center"
                android:text="Engine ZGxx"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="#dedef2"
                android:textColor="@color/colorPrimary"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/txtSparePart1"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_below="@+id/txtSparePart"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:layout_margin="3dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</ScrollView>