<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".ServiceDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/layoutEngineCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageService"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/enginerepair"/>

                <TextView
                    android:id="@+id/titleService"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Replace Oil Engine"
                    android:layout_toRightOf="@+id/imageService"
                    />
                <TextView
                    android:id="@+id/descriptionService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:text="We replace the Engine with Amasco oil, Total Oil Or Oando Oil"
                    android:layout_toRightOf="@id/imageService"
                    android:layout_below="@+id/titleService"
                    />
                <TextView
                    android:id="@+id/costService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N1700"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@id/imageService"
                    android:layout_below="@+id/descriptionService"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>